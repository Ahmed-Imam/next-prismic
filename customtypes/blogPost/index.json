{
  "id": "blogPost",
  "label": "Blog Post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "title": {
        "type": "StructuredText",
        "config": {
          "single": "heading1",
          "label": "Title",
          "placeholder": "Page Title"
        }
      },
      "uid": {
        "type": "UID",
        "config": {
          "label": "Slug",
          "placeholder": "Type a url formatted page slug..."
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "single": "paragraph,strong,em,hyperlink",
          "allowTargetBlank": true,
          "label": "Description"
        }
      }
    },
    "Details": {
      "publish_date": {
        "type": "Date",
        "config": {
          "label": "Publish Date"
        }
      },
      "author": {
        "type": "Link",
        "config": {
          "select": "document",
          "customtypes": ["author"],
          "label": "Author",
          "placeholder": "Who wrote this"
        }
      },
      "category": {
        "type": "Link",
        "config": {
          "select": "document",
          "customtypes": ["blogCategory"],
          "label": "Category",
          "placeholder": "Which category is most relevant?"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "constraint": {},
          "thumbnails": [],
          "label": "Featured Image"
        }
      }
    },
    "SEO": {
      "metaTitle": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "Meta title..."
        }
      },
      "metaDescription": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "Meta Description..."
        }
      },
      "metaImage": {
        "type": "Image",
        "config": {
          "constraint": {},
          "thumbnails": [],
          "label": "SEO Image"
        }
      }
    }
  }
}
